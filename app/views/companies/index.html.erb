<h1>Compañías</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre empresa</th>
      <th>Cantidad empleados por empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td> <%= company.employees.count %> </td>
        <td><%= link_to 'Edit', edit_company_path(company),  class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

